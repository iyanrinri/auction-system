# Docker Environment Configuration
# Copy this file to .env.docker for development

# Application
NODE_ENV=development
PORT=3000

# Database Configuration - Docker
DB_HOST=postgres
DB_PORT=5433
DB_USERNAME=auction_user
DB_PASSWORD=auction_password
DB_NAME=auction_system

# Redis Configuration - Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration - Docker
RABBITMQ_URL=amqp://auction_user:auction_password@rabbitmq:5672/auction_vhost
RABBITMQ_USER=auction_user
RABBITMQ_PASSWORD=auction_password
RABBITMQ_VHOST=auction_vhost

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development
JWT_EXPIRES_IN=7d

# Email Configuration (for future use)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@auction.com