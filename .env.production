# Production Environment Configuration
# Copy this file to .env.production and update with secure values

# Application
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=change_this_username
DB_PASSWORD=change_this_secure_password
DB_NAME=auction_system

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# RabbitMQ Configuration
RABBITMQ_USER=change_this_rabbitmq_user
RABBITMQ_PASSWORD=change_this_rabbitmq_password
RABBITMQ_VHOST=auction_vhost

# JWT Configuration - MUST CHANGE IN PRODUCTION
JWT_SECRET=change_this_to_very_secure_random_string_for_production
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@yourdomain.com